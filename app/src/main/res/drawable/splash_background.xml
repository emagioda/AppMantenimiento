<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Fondo -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@color/splash_background" />
        </shape>
    </item>

    <!-- Sombra/glow detrás del logo -->
    <item android:gravity="center">
        <inset
            android:insetLeft="0dp"
            android:insetTop="8dp"
            android:insetRight="0dp"
            android:insetBottom="0dp">
            <shape android:shape="oval">
                <!-- Tamaño del halo (ajustá a gusto) -->
                <size
                    android:width="420dp"
                    android:height="420dp" />
                <!-- De oscuro semitransparente a transparente -->
                <gradient
                    android:type="radial"
                    android:gradientRadius="260dp"
                    android:centerX="50%"
                    android:centerY="58%"
                    android:startColor="#88000000"
                    android:endColor="@android:color/transparent" />
            </shape>
        </inset>
    </item>

    <!-- Logo centrado -->
    <item android:gravity="center">
        <inset android:inset="24dp">
            <bitmap
                android:src="@drawable/splash_logo"
                android:antialias="true"
                android:filter="true" />
        </inset>
    </item>

</layer-list>
